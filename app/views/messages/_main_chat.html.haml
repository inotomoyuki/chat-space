.chat-main
  .chat-main_group-info
    .group
      .current-group
        = @group.name
      .member
        Member:
        - @group.users.each do |member|
          = member.name   
    = link_to edit_group_path(@group), class:"icon" do
      Edit
  .chat-main_message-list
    .messageField
      = render @messages

  .form
    = form_with model: [@group, @message], html: {class: "Form"}, local: true do |f|
      .Form_contents
        = f.text_field :content, class: 'Form_contents__text', placeholder: 'type a message'
        = f.label :image, class: 'Form_contents__image' do
          = icon('far', 'image')
          = f.file_field :image, class: 'Form_contents__image__file'
        = f.submit 'Send', class: 'Form__submit'